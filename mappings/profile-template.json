{
  "settings": {
    "max_result_window": 15000,
    "index": {
      "analysis" : {
        "analyzer": {
          "autocomplete_analyzer": {
            "type": "custom",
            "tokenizer": "lowercase",
            "filter": ["asciifolding", "title_ngram"]
          },
          "autocomplete_analyzer_for_code": {
            "type": "custom",
            "tokenizer": "whitespace",
            "filter": ["lowercase", "asciifolding", "title_ngram"]
          }
        },
        "filter": {
          "title_ngram": {
            "type": "nGram",
            "min_gram": 3,
            "max_gram": 5
          }
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "operator": {
          "type": "integer"
        },
        "route": {
          "type": "keyword"
        },
        "userRoute": {
          "type": "keyword"
        },
        "shapeRoute": {
          "type": "keyword"
        },
        "licensePlate": { 
          "type": "keyword"
        },
        "authStopCode" : { 
          "type": "text",
          "analyzer": "autocomplete_analyzer_for_code",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "userStopCode": {
          "type": "text",
          "analyzer": "autocomplete_analyzer_for_code",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "userStopName": { 
          "type": "text",
          "analyzer": "autocomplete_analyzer",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "expeditionStartTime": { 
          "type": "date",
          "format" : "yyyy-MM-dd HH:mm:ss"
        },
        "expeditionEndTime": { 
          "type": "date",
          "format" : "yyyy-MM-dd HH:mm:ss"
        },
        "fulfillment" : { 
          "type": "keyword"
        },
        "expeditionStopOrder": {
          "type": "integer"
        },
        "expeditionDayId" : { 
          "type": "integer"
        },
        "stopDistanceFromPathStart" : { 
          "type": "half_float"
        },
        "expandedBoarding" : { 
          "type": "half_float"
        },
        "expandedAlighting": { 
          "type": "half_float"
        },
        "loadProfile": { 
          "type": "half_float"
        },
        "busCapacity" : { 
          "type": "integer"
        },
        "expeditionStopTime" : { 
          "type": "date",
          "format" : "yyyy-MM-dd HH:mm:ss",
          "null_value": "0"
        },
        "timePeriodInStartTime": {
          "type": "keyword"
        },
        "timePeriodInStopTime": {
          "type": "keyword"
        },
        "dayType": {
          "type": "keyword"
        },
        "busStation": {
          "type": "integer"
        },
        "transactions" : { 
          "type": "integer"
        },
        "halfHourInStartTime" : { 
          "type": "integer"
        },
        "halfHourInStopTime" : { 
          "type": "integer"
        }
      }
    }
  }
}
